@page
@model QuizzWeb.Pages.Quizzes.EditQuestionModel
@{
}

<h1>Edit Question</h1>

<form method="post">
    <input hidden asp-for="Question.Id" />
    <input hidden asp-for="Question.QuizId" />
    <div class="form-group">
        <label asp-for="Question.Content" class="control-label"></label>
        <input asp-for="Question.Content" class="form-control" />
        <span asp-validation-for="Question.Content" class="text-danger"></span>
    </div>

    <h3>Answers</h3>
    <div id="answersContainer">

        @for (int i = 0; i < @Model.Answers.Count; i++)
        {
            <div class="form-group">
                <input hidden asp-for="Answers[i].Id" />
                <input asp-for="@Model.Answers[i].Content" class="form-control" />
                <span asp-validation-for="Answers[i].Content" class="text-danger"></span>

                <input type="radio" name="CorrectAnswer" value="@Model.Answers[i].Id" class="form-check-input" @(@Model.Answers[i].RigtAnswer ? "checked" : "") />
                <label class="form-check-label">Correct</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="/Quizzes/EditQuiz" asp-route-id="@Model.Question.QuizId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}